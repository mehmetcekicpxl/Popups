<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Popups.MainPage"
             Title="Flex Layout 2PROA">
    <Grid Padding="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <ScrollView  Grid.Row="0">
            <FlexLayout x:Name="NamesFlexBox" BackgroundColor="LightYellow" Wrap="Wrap" 
                        Direction="Row"
                        JustifyContent="Start" AlignItems="Center"
                                                            AlignContent="Start"
            >
                
            </FlexLayout>
        </ScrollView>
        <Button Grid.Row="1" Text="Toevoegen" CornerRadius="20" Margin="10"  Clicked="ToevoegenBtn_Clicked"/>
    </Grid>


</ContentPage>
